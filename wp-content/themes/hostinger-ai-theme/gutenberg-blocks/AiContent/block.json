{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "hostinger-ai-theme/ai-content-block",
    "version": "1.0.0",
    "title": "AI Content Generator",
    "category": "text",
    "icon": "edit",
    "description": "A block for AI-powered content generation and regeneration",
    "supports": {
        "html": false,
        "anchor": true,
        "align": true,
        "customClassName": true
    },
    "attributes": {
        "contentType": {
            "type": "string",
            "default": "section"
        },
        "toneOfVoice": {
            "type": "string",
            "default": "formal"
        },
        "contentLength": {
            "type": "string",
            "default": "short"
        },
        "description": {
            "type": "string",
            "default": ""
        },
        "selectedContentTypes": {
            "type": "array",
            "default": []
        },
        "addImage": {
            "type": "boolean",
            "default": false
        },
        "generatedContent": {
            "type": "string",
            "default": ""
        },
        "isGenerating": {
            "type": "boolean",
            "default": false
        }
    },
    "textdomain": "hostinger-ai-theme",
    "editorScript": "hostinger-ai-content-block-editor-script",
    "editorStyle": "file:./build/index.css",
    "style": "file:./build/style-index.css",
    "viewScript": "file:./build/view.js",
    "render": "file:./render.php"
}