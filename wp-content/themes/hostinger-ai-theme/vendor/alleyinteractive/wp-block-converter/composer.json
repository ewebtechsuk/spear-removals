{
    "name": "alleyinteractive/wp-block-converter",
    "description": "Convert HTML into Gutenberg Blocks with PHP",
    "type": "library",
    "keywords": [
        "alleyinteractive",
        "wp-block-converter"
    ],
    "homepage": "https://github.com/alleyinteractive/wp-block-converter",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley Interactive",
            "email": "info@alley.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "alleyinteractive/composer-wordpress-autoloader": "^1.0",
        "mantle-framework/support": "^1.6",
        "psr/log": "^2.0 || ^3.0"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^2.0",
        "mantle-framework/testkit": "^1.0",
        "szepeviktor/phpstan-wordpress": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Alley\\WP\\Block_Converter\\Tests\\": "tests"
        }
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "Alley\\WP\\Block_Converter\\": "src"
            },
            "autoload-dev": {
                "Alley\\WP\\Block_Converter\\Tests\\": "tests"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpstan": "phpstan --memory-limit=512M",
        "phpunit": "phpunit",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    }
}
